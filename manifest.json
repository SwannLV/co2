{
  "name": "CO₂, mon Amour... NOT!",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Surfer écolo, est-ce possible ?",
  "homepage_url": "http://swannlv-cv.herokuapp.com",
  "icons": {
    "16": "icons/love3.png",
    "48": "icons/love3.png",
    "128": "icons/love3.png"
  },
  "default_locale": "fr",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/love3.png",
    "default_title": "CO₂... NOT!",
    "default_popup": "src/browser_action/index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
